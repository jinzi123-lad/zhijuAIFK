/* pages/landlord/home/index.wxss */
page {
  background-color: #f1f5f9;
}

.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* Premium Dashboard Header */
.dashboard-header {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  padding: 60rpx 40rpx;
  margin: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(37, 99, 235, 0.4);
  position: relative;
  overflow: hidden;
}

/* Glass Shine Effect on Header */
.dashboard-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, transparent 60%);
  transform: rotate(30deg);
  pointer-events: none;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
  flex: 1;
}

.stat-num {
  font-size: 56rpx;
  font-weight: 800;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.stat-divider {
  width: 2rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
}

.section-title {
  padding: 0 40rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: #3b82f6;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* Management List */
.property-list {
  padding: 0 30rpx;
}

.manage-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05);
  border: 1px solid white;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1e293b;
  flex: 1;
  margin-right: 24rpx;
  line-height: 1.4;
}

.status-badge {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.status-badge.rented {
  background: #ecfdf5;
  color: #059669;
}

.status-badge.vacant {
  background: #fffbeb;
  color: #b45309;
}

.card-body {
  display: flex;
  gap: 40rpx;
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 30rpx;
  background: #f8fafc;
  padding: 20rpx;
  border-radius: 16rpx;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.card-actions button {
  margin: 0 !important;
  font-size: 24rpx;
  border-radius: 999rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  height: 60rpx;
  font-weight: bold;
}

.card-actions button[type="primary"] {
  background: #3b82f6 !important;
  color: white !important;
  border: none !important;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* FAB */
.fab-add {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 50%;
  color: white;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(37, 99, 235, 0.4);
  padding-bottom: 12rpx;
  box-sizing: border-box;
  transition: transform 0.2s;
  z-index: 100;
}

.fab-add:active {
  transform: scale(0.9);
}
