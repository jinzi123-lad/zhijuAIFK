/** index.wxss **/

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Header styles removed as we use native navbar now */

/* Main Content */
.main-content {
  padding: 32rpx; /* Adjusted padding since no sticky header */
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* Stats Card */
.stats-card {
  border-radius: 48rpx; /* rounded-3xl */
  padding: 40rpx;
  transition: all 0.3s;
}

.stats-card:active {
    background-color: rgba(255,255,255,0.8);
    transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon-circle-sm {
  width: 64rpx; /* w-8 */
  height: 64rpx; /* h-8 */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg-primary-10 {
  background-color: rgba(37, 99, 235, 0.1); /* primary/10 */
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.stats-main {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.stats-num {
  font-size: 72rpx; /* text-4xl */
  font-weight: bold;
}

.stats-label {
  font-size: 24rpx; /* text-xs */
  margin-left: 8rpx;
}

.stats-side {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stats-detail {
  text-align: right;
}

.detail-item {
  display: block;
  font-size: 24rpx; /* text-xs */
  font-weight: 500;
}

.text-success { color: var(--success); }
.text-warning { color: var(--warning); }

/* Grid Section */
.section {
    width: 100%;
}

.section-title {
  font-size: 32rpx; /* text-base */
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
  display: block;
}

.p-5 { padding: 40rpx; }
.rounded-3xl { border-radius: 48rpx; }

.grid-cols-4 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 48rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.grid-icon-box {
  width: 112rpx; /* w-14 */
  height: 112rpx; /* h-14 */
  border-radius: 32rpx; /* rounded-2xl */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}

.grid-label {
  font-size: 24rpx; /* text-xs */
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

/* Specific Colors from dashboard.tsx */
.bg-cyan-light { background-color: #E5F9F7; }
.bg-yellow-light { background-color: #FFF9E5; }
.bg-teal-light { background-color: #E5F9F4; }
.bg-blue-light { background-color: #EBF5F6; }
.bg-red-light { background-color: #FEEAEA; }
.bg-purple-light { background-color: #EEEBFC; }
.bg-pink-light { background-color: #FFEBF3; }
.bg-indigo-light { background-color: #EDECFE; }

/* Todo List */
.todo-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.todo-item {
  padding: 32rpx;
  border-radius: 32rpx; /* rounded-2xl */
  text-align: left;
}

.todo-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.todo-icon-box {
  flex-shrink: 0;
  width: 72rpx; /* w-9 */
  height: 72rpx; /* h-9 */
  border-radius: 24rpx; /* rounded-xl */
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg-destructive-10 { background-color: rgba(239, 68, 68, 0.1); }

.todo-text {
  flex: 1;
  min-width: 0;
}

.todo-title {
  display: block;
  font-size: 28rpx; /* text-sm */
  font-weight: 600;
  margin-bottom: 8rpx;
}

.todo-desc {
  display: block;
  font-size: 24rpx; /* text-xs */
  margin-bottom: 16rpx;
}

.todo-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx; /* text-xs */
}

.ml-1 { margin-left: 8rpx; }
