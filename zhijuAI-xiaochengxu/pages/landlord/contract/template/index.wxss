/* 合同模板页面样式 */
.container {
  min-height: 100vh;
}

.main-body {
  padding: 24rpx;
}

.loading-box {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

/* 模板列表 */
.template-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.template-card {
  padding: 32rpx;
  border-radius: 24rpx;
}

.template-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.template-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: rgba(37, 99, 235, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.template-info {
  flex: 1;
}

.template-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.template-type {
  font-size: 24rpx;
  color: #64748b;
}

.template-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.template-badge.default {
  background: rgba(37, 99, 235, 0.1);
  color: #2563eb;
}

.template-badge.custom {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.template-desc {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.template-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  border: none;
  background: #f5f7fa;
  line-height: 1.5;
}

.action-btn::after {
  border: none;
}

.action-btn.preview {
  color: #64748b;
}

.action-btn.use {
  background: rgba(37, 99, 235, 0.1);
  color: #2563eb;
}

.action-btn.edit {
  color: #f59e0b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 添加模板按钮 */
.add-template-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 32rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}