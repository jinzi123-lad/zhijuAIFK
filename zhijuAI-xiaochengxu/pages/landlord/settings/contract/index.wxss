/* 合同设置页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ed 100%);
}

.main-body {
  height: calc(100vh - 88px);
  padding: 24rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 模板列表 */
.template-list {
  display: block;
  width: 100%;
}

.template-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.template-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
}

.template-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  background: rgba(37, 99, 235, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.template-icon.custom {
  background: rgba(16, 185, 129, 0.1);
}

.icon-text {
  font-size: 32rpx;
}

.template-info {
  flex: 1;
  min-width: 0;
}

.template-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-desc {
  font-size: 22rpx;
  color: #94a3b8;
  display: block;
}

.template-btns {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
}

.btn-item {
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.btn-item.preview {
  background: #f0f0f0;
  color: #666;
}

.btn-item.use {
  background: #2563eb;
  color: #fff;
}

.btn-item.delete {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

/* 空状态 */
.empty-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 上传按钮 */
.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  border-radius: 16rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.upload-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 默认设置 */
.default-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx;
}

.default-label {
  font-size: 28rpx;
  color: #333;
}

.picker-box {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #2563eb;
}

.picker-arrow {
  font-size: 32rpx;
  color: #94a3b8;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.mb-3 {
  margin-bottom: 24rpx !important;
}
