.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
}

/* 设置区块 */
.setting-section {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-title,
.section-title-full {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title-full {
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.section-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 选项列表 */
.option-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.option-item.active {
  background: #e0e7ff;
  border-color: #2563eb;
}

.option-label {
  font-size: 28rpx;
  color: #1a1a1a;
}

.option-check {
  width: 40rpx;
  height: 40rpx;
  background: #2563eb;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 复选框 */
.checkbox-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}

.checkbox.checked {
  background: #2563eb;
  border-color: #2563eb;
}

.checkbox-label {
  font-size: 28rpx;
  color: #1a1a1a;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  margin-top: 20rpx;
}

.save-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}