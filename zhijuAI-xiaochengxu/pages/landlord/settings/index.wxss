/** index.wxss **/
.container { min-height: 100vh; }
.main-body { padding-top: 180rpx; }

.section-title { font-size: 24rpx; }
.rounded-xl { border-radius: 24rpx; }
.overflow-hidden { overflow: hidden; }

.setting-item {
    transition: background 0.2s;
}
.setting-item:active { background: rgba(0,0,0,0.05); }

.border-b { border-bottom: 1rpx solid rgba(255,255,255,0.3); }

.icon-box { width: 64rpx; height: 64rpx; }
.bg-primary-10 { background: rgba(37,99,235,0.1); }
.rounded-lg { border-radius: 16rpx; }

.border-destructive { border: 2rpx solid rgba(239,68,68,0.2); }
.text-destructive { color: #ef4444; }

/* Common */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
.flex-row { display: flex; align-items: center; }
.space-between { justify-content: space-between; }
.centered { display: flex; justify-content: center; align-items: center; }
.text-muted { color: #64748b; }
.text-primary { color: #2563eb; }
.font-bold { font-weight: 600; }
.text-xs { font-size: 22rpx; }
.text-sm { font-size: 28rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-4 { margin-bottom: 32rpx; }
.ml-2 { margin-left: 16rpx; }
.mr-2 { margin-right: 16rpx; }
.p-4 { padding: 32rpx; }
.gap-3 { gap: 24rpx; }
.block { display: block; }
