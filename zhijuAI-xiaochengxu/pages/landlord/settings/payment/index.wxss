.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 20rpx;
  padding-top: 200rpx;
}

/* 提示卡片 */
.tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2563eb;
  display: block;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 收款码区域 */
.qr-section {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.qr-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.qr-icon {
  font-size: 36rpx;
}

.qr-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.qr-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: #fee2e2;
  color: #dc2626;
}

.qr-status.uploaded {
  background: #d1fae5;
  color: #059669;
}

/* 上传区域 */
.qr-upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

/* 预览区域 */
.qr-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.qr-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  background: #e0e7ff;
  color: #4f46e5;
}

.action-btn.danger {
  background: #fee2e2;
  color: #dc2626;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  margin-top: 20rpx;
}

.save-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}