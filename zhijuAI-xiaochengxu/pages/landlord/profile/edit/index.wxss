.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.avatar-box {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 16rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 64rpx;
  font-weight: bold;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #2563eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
}

/* 表单区域 */
.form-section {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.form-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f7fa;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  text-align: right;
}

.phone-row {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
}

.phone-value {
  font-size: 28rpx;
  color: #1a1a1a;
}

.phone-placeholder {
  font-size: 28rpx;
  color: #999;
}

.phone-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  background: #2563eb;
  color: #fff;
  border-radius: 12rpx;
  line-height: 1.5;
}

/* 微信授权 */
.wx-auth-tip {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #f0f9ff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.wx-auth-tip text {
  font-size: 26rpx;
  color: #2563eb;
}

.wx-auth-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #d1fae5;
  color: #059669;
  font-size: 28rpx;
  border-radius: 16rpx;
  border: none;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  margin-top: 24rpx;
}

.save-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
