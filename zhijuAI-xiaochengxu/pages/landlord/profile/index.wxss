.main-body {
  padding: 20rpx;
  padding-bottom: 180rpx;
}

/* 用户信息卡片 */
.profile-card {
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-text {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
}

.user-phone {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.verify-badge {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: #fef3c7;
  color: #d97706;
  margin-top: 8rpx;
}

.verify-badge.verified {
  background: #d1fae5;
  color: #059669;
}

.edit-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

.edit-btn text:first-child {
  font-size: 28rpx;
  color: #2563eb;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 菜单区域 */
.menu-section {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
}

.menu-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-box {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.menu-label {
  flex: 1;
  font-size: 30rpx;
  color: #1a1a1a;
}

.logout-text {
  color: #ef4444;
}

.menu-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.menu-tag.success {
  background: #d1fae5;
  color: #059669;
}

.menu-tag.warning {
  background: #fef3c7;
  color: #d97706;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.version-info {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}
