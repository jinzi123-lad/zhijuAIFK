.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
}

/* 状态卡片 */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  border-radius: 32rpx;
}

.status-icon-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.6);
}

.status-card.none { background: linear-gradient(135deg, rgba(148, 163, 184, 0.2), rgba(100, 116, 139, 0.1)); }
.status-card.pending { background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(217, 119, 6, 0.1)); }
.status-card.approved { background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.1)); }
.status-card.rejected { background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.1)); }

.status-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.status-info {
  width: 100%;
}

.status-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  color: #1a1a1a;
}

.status-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 表单区域 */
.form-section {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
}

.form-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #2563eb;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  border: 2rpx solid #e2e8f0;
}

.form-input:focus {
  border-color: #2563eb;
}

/* 证件上传 */
.id-upload-row {
  display: flex;
  gap: 24rpx;
}

.id-upload-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-box {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.upload-box.has-image {
  border: none;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #666;
}

.id-image {
  width: 100%;
  height: 100%;
}

.upload-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 认证信息展示 */
.verified-info {
  padding: 24rpx;
  border-radius: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}