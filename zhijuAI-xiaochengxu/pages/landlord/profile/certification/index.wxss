.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 20rpx;
  padding-top: 200rpx;
}

.loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
}

/* 提示卡片 */
.tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2563eb;
  display: block;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 备案列表 */
.cert-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.cert-item {
  padding: 24rpx;
  border-radius: 20rpx;
}

.cert-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.cert-info {
  flex: 1;
}

.cert-address {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.cert-owner {
  font-size: 24rpx;
  color: #666;
}

.cert-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.cert-status.pending { background: #fef3c7; color: #d97706; }
.cert-status.approved { background: #d1fae5; color: #059669; }
.cert-status.rejected { background: #fee2e2; color: #dc2626; }

.cert-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  background: #f5f7fa;
  margin-bottom: 12rpx;
}

.reject-reason {
  font-size: 24rpx;
  color: #dc2626;
  padding: 16rpx;
  background: #fee2e2;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
}

/* 添加按钮 */
.add-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.cert-preview-img {
  width: 100%;
  height: 200rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
  border: none;
}

.cancel-btn {
  background: #f5f7fa;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}