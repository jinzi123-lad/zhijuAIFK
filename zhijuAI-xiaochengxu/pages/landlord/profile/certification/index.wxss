.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
  padding-top: 160rpx;
}

.loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
}

/* 状态卡片 - 与实名认证风格一致 */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  border-radius: 32rpx;
}

.status-icon-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.6);
}

.status-card.none { background: linear-gradient(135deg, rgba(148, 163, 184, 0.2), rgba(100, 116, 139, 0.1)); }
.status-card.pending { background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(217, 119, 6, 0.1)); }
.status-card.approved { background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.1)); }

.status-info {
  width: 100%;
}

.status-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  color: #1a1a1a;
}

.status-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

/* 表单区域 - 与实名认证一致 */
.form-section {
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-left: 12rpx;
  border-left: 8rpx solid #2563eb;
}

.form-group {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  border: 2rpx solid #e2e8f0;
}

.form-input:focus {
  border-color: #2563eb;
}

/* 证件上传 - 与实名认证一致 */
.upload-row {
  display: flex;
  justify-content: center;
}

.upload-item {
  width: 100%;
}

.upload-box {
  width: 100%;
  height: 280rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #f8fafc;
}

.upload-box.has-image {
  border: 2rpx solid #2563eb;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #64748b;
}

.cert-image {
  width: 100%;
  height: 100%;
}

/* 备案列表 */
.cert-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.cert-item {
  padding: 32rpx;
  border-radius: 24rpx;
}

.cert-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.cert-info {
  flex: 1;
}

.cert-address {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 12rpx;
}

.cert-owner {
  font-size: 26rpx;
  color: #64748b;
}

.cert-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.cert-status.pending { background: #fef3c7; color: #d97706; }
.cert-status.approved { background: #d1fae5; color: #059669; }
.cert-status.rejected { background: #fee2e2; color: #dc2626; }

.cert-preview {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx;
  background: #f5f7fa;
  margin-bottom: 16rpx;
}

.reject-reason {
  font-size: 26rpx;
  color: #dc2626;
  padding: 20rpx;
  background: #fee2e2;
  border-radius: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #64748b;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: none;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}