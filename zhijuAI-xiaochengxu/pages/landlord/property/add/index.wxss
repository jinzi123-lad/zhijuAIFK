/* pages/landlord/property/add/index.wxss */
.container {
  padding: 0 48rpx !important;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 16rpx;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 64rpx;
  display: block;
}

.type-card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.6);
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s;
  box-shadow: 0 8rpx 24rpx rgba(148, 163, 184, 0.1);
  position: relative;
  overflow: hidden;
}

.type-card-active {
  background: rgba(59, 130, 246, 0.05);
  border-color: #3b82f6;
  transform: scale(0.98);
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.icon-box.single {
  background: #eff6ff;
  color: #3b82f6;
}

.icon-box.building {
  background: #fdf2f8;
  color: #ec4899;
}

.content-box {
  flex: 1;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

.arrow {
  color: #cbd5e1;
  font-size: 40rpx;
}

/* Decoration Circle */
.decor-circle {
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  opacity: 0.1;
}

.single .decor-circle { background: #3b82f6; }
.building .decor-circle { background: #ec4899; }
