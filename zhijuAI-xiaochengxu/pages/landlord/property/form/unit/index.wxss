.container { padding: 0 !important; background: #f8fafc; min-height: 100vh; }
.form-scroll { height: 100vh; box-sizing: border-box; padding-bottom: 180rpx; }

.form-section { margin: 24rpx; padding: 32rpx; background: #fff; border-radius: 24rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); }
.section-title { font-size: 30rpx; font-weight: bold; margin-bottom: 24rpx; padding-left: 16rpx; border-left: 8rpx solid #3b82f6; }

.form-item { margin-bottom: 24rpx; }
.label { font-size: 26rpx; color: #64748b; margin-bottom: 12rpx; display: block; }
.input, .picker-display { width: 100%; height: 88rpx; background: #f8fafc; border-radius: 12rpx; padding: 0 24rpx; box-sizing: border-box; display: flex; align-items: center; font-size: 28rpx; }
.price-input { color: #fe5000; font-weight: bold; }
.required { color: #ef4444; }

.form-row { display: flex; gap: 24rpx; }
.half { flex: 1; }
.arrow { color: #cbd5e1; margin-left: auto; }

/* Status Toggles */
.status-toggles { display: flex; gap: 16rpx; height: 88rpx; align-items: center; }
.status-btn { flex: 1; height: 72rpx; display: flex; align-items: center; justify-content: center; font-size: 26rpx; border-radius: 12rpx; background: #f1f5f9; color: #64748b; }
.active-green { background: #dcfce7; color: #15803d; font-weight: bold; }
.active-gray { background: #e2e8f0; color: #475569; font-weight: bold; }

/* Tags */
.tag-selector { display: flex; flex-wrap: wrap; gap: 16rpx; }
.tag-option { padding: 12rpx 24rpx; background: #f1f5f9; color: #64748b; font-size: 24rpx; border-radius: 12rpx; }
.tag-option.active { background: #eff6ff; color: #3b82f6; }

/* Images */
.image-grid { display: flex; flex-wrap: wrap; gap: 20rpx; }
.image-item { width: 150rpx; height: 150rpx; border-radius: 16rpx; position: relative; overflow: hidden; background: #f1f5f9; }
.thumb { width: 100%; height: 100%; }
.delete-btn { position: absolute; top: 0; right: 0; width: 40rpx; height: 40rpx; background: rgba(0,0,0,0.5); color: white; display: flex; align-items: center; justify-content: center; border-bottom-left-radius: 8rpx; }
.add-btn { border: 2rpx dashed #cbd5e1; display: flex; align-items: center; justify-content: center; background: #fff; }
.plus { font-size: 60rpx; color: #cbd5e1; margin-top: -8rpx; }

.bottom-bar { position: fixed; bottom: 0; left: 0; width: 100%; padding: 24rpx 32rpx; background: #fff; border-top: 1px solid #f1f5f9; padding-bottom: constant(safe-area-inset-bottom); padding-bottom: env(safe-area-inset-bottom); }
.submit-btn { background: #3b82f6; color: white; border-radius: 44rpx; font-weight: bold; }
