/* pages/landlord/property/form/single/index.wxss */
.container {
  padding: 0 !important;
}

/* AI Section */
.ai-section {
    background: linear-gradient(135deg, #f0fdf4 0%, #e0e7ff 100%) !important;
    border: 2rpx solid #dbeafe !important;
}

.ai-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
}

.ai-title-group {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.ai-icon {
    font-size: 36rpx;
}

.ai-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #312e81;
}

.ai-tag {
    font-size: 20rpx;
    color: #4f46e5;
    background: #ffffff;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 6rpx rgba(79, 70, 229, 0.1);
}

.ai-textarea {
    width: 100%;
    height: 160rpx;
    background: #ffffff;
    border-radius: 16rpx;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #334155;
    margin-bottom: 20rpx;
    border: 2rpx solid #e2e8f0;
}

.ai-btn {
    width: 100%;
    background: #4f46e5;
    color: #ffffff;
    font-size: 28rpx;
    font-weight: bold;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 0;
    box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.3);
    transition: all 0.2s;
}

.ai-btn:active {
    transform: scale(0.98);
}

/* Form Styles */
.form-scroll {
  height: 100vh;
  box-sizing: border-box;
}

.form-section {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #3b82f6;
  line-height: 1;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  display: block;
}

.input, .picker-display {
  width: 100%;
  height: 88rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #334155;
  display: flex;
  align-items: center;
  border: 1px solid transparent;
  transition: all 0.2s;
}

.input:focus {
  background: #fff;
  border-color: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.price-input {
  color: #ef4444;
  font-weight: 600;
}

.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.half {
  flex: 1;
  margin-bottom: 0;
}

.picker-display {
  justify-content: space-between;
}

.arrow {
  color: #cbd5e1;
}

/* Tags */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-option {
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  color: #64748b;
  font-size: 24rpx;
  border-radius: 12rpx;
  transition: all 0.2s;
  border: 1px solid transparent;
}

.tag-option.active {
  background: #eff6ff;
  color: #3b82f6;
  border-color: #3b82f6;
  font-weight: 500;
}

/* Image Grid */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

.thumb {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 12rpx;
  font-size: 28rpx;
}

.add-btn {
  background: #f1f5f9;
  border: 2rpx dashed #cbd5e1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus {
  font-size: 64rpx;
  color: #cbd5e1;
  font-weight: 200;
  margin-top: -8rpx;
}

/* Bottom Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #2563eb, #3b82f6);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.3);
}


/* New Parity Styles */
.required { color: #ef4444; margin-left: 4rpx; }

/* 3-Col Layout */
.three-col .form-item { flex: 1; margin-bottom: 0; }
.sm-label { font-size: 24rpx; }
.sm-input { padding: 0 16rpx; font-size: 26rpx; }

/* Fees Grid */
.fees-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; margin-bottom: 24rpx; }
.fee-item { margin-bottom: 0; }
.fee-label { font-size: 24rpx; color: #64748b; margin-bottom: 8rpx; display: block; font-weight: 500;}
.fee-input { width: 100%; height: 72rpx; background: #f8fafc; border-radius: 12rpx; padding: 0 16rpx; font-size: 24rpx; border: 1px solid transparent; }
.fee-input:focus { background: #fff; border-color: #3b82f6; }

/* Description */
.desc-textarea { width: 100%; height: 240rpx; background: #f8fafc; border-radius: 16rpx; padding: 24rpx; font-size: 28rpx; box-sizing: border-box; }

/* Group Title */
.form-group-title { font-size: 26rpx; font-weight: bold; color: #475569; margin-bottom: 16rpx; margin-top: 10rpx;}

