/** 财务报表页面样式 **/
.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e5e7eb;
  border-top-color: #2563eb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.empty-illustration {
  position: relative;
  margin-bottom: 40rpx;
}

.empty-icon-bg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.empty-chart {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 12rpx;
  padding: 0 40rpx;
}

.chart-bar {
  width: 24rpx;
  background: linear-gradient(to top, #2563eb, #7c3aed);
  border-radius: 8rpx 8rpx 0 0;
  opacity: 0.3;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.empty-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.empty-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 40rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.empty-btn.primary {
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
}

.empty-btn.secondary {
  background: rgba(37, 99, 235, 0.1);
  color: #2563eb;
}

.empty-tips {
  width: 100%;
  padding: 32rpx;
  border-radius: 24rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #333;
}

.tip-item + .tip-item {
  border-top: 1rpx solid #f0f0f0;
}

/* 周期选择器 */
.period-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.period-pill {
  padding: 16rpx 32rpx;
  border-radius: 999px;
  font-size: 26rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.8);
  color: #64748b;
  transition: all 0.3s;
}

.period-pill.active {
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
}

/* 汇总卡片 */
.summary-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.summary-card {
  padding: 28rpx;
  border-radius: 28rpx;
}

.summary-card.full-width {
  grid-column: span 2;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-label {
  font-size: 24rpx;
  color: #64748b;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon.success { background: rgba(16, 185, 129, 0.1); }
.card-icon.danger { background: rgba(239, 68, 68, 0.1); }
.card-icon.primary { background: rgba(37, 99, 235, 0.1); }

.card-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.card-amount.large {
  font-size: 56rpx;
}

.card-amount.primary {
  color: #2563eb;
}

.card-growth {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 22rpx;
}

.card-growth.success { color: #10b981; }
.card-growth.danger { color: #ef4444; }

/* 收租率 */
.collect-rate {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.rate-label {
  font-size: 24rpx;
  color: #64748b;
}

.rate-bar {
  flex: 1;
  height: 12rpx;
  background: rgba(37, 99, 235, 0.1);
  border-radius: 999px;
  overflow: hidden;
}

.rate-fill {
  height: 100%;
  background: linear-gradient(90deg, #2563eb, #10b981);
  border-radius: 999px;
}

.rate-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2563eb;
}

/* 区块 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.view-all {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #2563eb;
}

/* 账单卡片 */
.payment-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.payment-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  border-radius: 24rpx;
}

.payment-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.payment-type-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-type-icon.success { background: rgba(16, 185, 129, 0.1); }
.payment-type-icon.danger { background: rgba(239, 68, 68, 0.1); }
.payment-type-icon.warning { background: rgba(245, 158, 11, 0.1); }

.payment-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.payment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.payment-property {
  font-size: 24rpx;
  color: #64748b;
}

.payment-date {
  font-size: 22rpx;
  color: #94a3b8;
}

.payment-right {
  text-align: right;
}

.payment-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.payment-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge-success { background: rgba(16, 185, 129, 0.1); color: #10b981; }
.badge-warning { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
.badge-error { background: rgba(239, 68, 68, 0.1); color: #ef4444; }

/* 空账单 */
.empty-payments {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 60rpx;
  color: #94a3b8;
  font-size: 26rpx;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
