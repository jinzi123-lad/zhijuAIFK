/** index.wxss **/
.container { min-height: 100vh; }
.main-body { padding-top: 180rpx; }

/* Year Selector */
.year-pill { padding: 8rpx 24rpx; border-radius: 999px; margin-right: 16rpx; font-size: 26rpx; transition: all 0.3s; }
.bg-primary { background: #2563eb; }
.text-white { color: #fff; }

/* Grid 3 */
.grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16rpx; }
.stats-card { padding: 24rpx; border-radius: 24rpx; display: flex; flex-direction: column; }
.stats-lbl { font-size: 22rpx; margin-bottom: 8rpx; }
.stats-val { font-size: 32rpx; font-weight: bold; }
.stats-val-sm { font-size: 28rpx; font-weight: bold; }

/* Chart */
.chart-card { border-radius: 32rpx; }
.toggle-group { border-radius: 16rpx; display: flex; gap: 4rpx; }
.toggle-item { padding: 4rpx 16rpx; font-size: 22rpx; border-radius: 12rpx; transition: all 0.2s; }

.bg-muted-20 { background: rgba(148,163,184,0.2); }
.bg-white { background: #fff; }
.shadow { box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); }

/* Bar Chart */
.bar-track { overflow: visible; } /* To show badge */
.bg-gradient-primary { background: linear-gradient(90deg, #2563eb, #3b82f6); }
.check-badge { position: absolute; right: -8rpx; top: -8rpx; width: 24rpx; height: 24rpx; }
.bg-success { background: #10b981; }

/* Common */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
.flex-row { display: flex; align-items: center; }
.space-between { justify-content: space-between; }
.centered { display: flex; justify-content: center; align-items: center; }
.text-muted { color: #64748b; }
.text-primary { color: #2563eb; }
.text-success { color: #10b981; }
.font-bold { font-weight: 600; }
.mb-2 { margin-bottom: 16rpx; }
.mb-4 { margin-bottom: 32rpx; }
.ml-1 { margin-left:8rpx; }
.pr-2 { padding-right: 16rpx; }
.p-1 { padding: 8rpx; }
.p-4 { padding: 32rpx; }
.mx-2 { margin-left: 16rpx; margin-right: 16rpx; }
.text-xs { font-size: 22rpx; }
.h-8 { height: 64rpx; }
.h-full { height: 100%; }
.rounded-lg { border-radius: 16rpx; }
.rounded-full { border-radius: 999px; }
.w-10 { width: 60rpx; }
.w-16 { width: 120rpx; }
