.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
}

.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14px 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.tab.active {
  color: #667eea;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 3px;
  background: #667eea;
  border-radius: 2px;
}

.appointment-list {
  padding: 12px 16px;
}

.appointment-card {
  background: #fff;
  border-radius: 12px;
  margin-bottom: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #f5f7fa;
}

.property-name {
  font-size: 15px;
  font-weight: 600;
  color: #333;
}

.status-tag {
  font-size: 11px;
  padding: 3px 8px;
  border-radius: 10px;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-confirmed {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background: #f5f5f5;
  color: #999;
}

.card-body {
  padding: 12px 16px;
}

.info-row {
  display: flex;
  margin-bottom: 8px;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  width: 70px;
  font-size: 13px;
  color: #999;
}

.info-row .value {
  flex: 1;
  font-size: 13px;
  color: #333;
}

.card-footer {
  display: flex;
  border-top: 1px solid #f5f7fa;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  font-size: 14px;
  font-weight: 500;
}

.btn-cancel {
  color: #999;
  border-right: 1px solid #f5f7fa;
}

.btn-confirm {
  color: #667eea;
}

.loading, .empty {
  text-align: center;
  padding: 40px;
  color: #999;
  font-size: 14px;
}
