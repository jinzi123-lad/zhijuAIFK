/* 租客详情页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.mesh-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.3) 0%, rgba(139, 92, 246, 0.2) 100%);
  z-index: 0;
}

.main-body {
  padding: 180rpx 32rpx 0;
  position: relative;
  z-index: 1;
  height: calc(100vh - 180rpx);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(37, 99, 235, 0.2);
  border-top-color: #2563eb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #64748b;
  font-size: 28rpx;
}

/* 个人资料卡片 */
.profile-section {
  margin-bottom: 32rpx;
}

.profile-card {
  padding: 40rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-wrapper {
  position: relative;
}

.avatar-large {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.avatar-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
}

.tenant-status {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.tenant-status.active {
  background: #10b981;
  color: #fff;
}

.tenant-status.expiring {
  background: #f59e0b;
  color: #fff;
}

.tenant-status.expired {
  background: #ef4444;
  color: #fff;
}

.profile-info {
  flex: 1;
}

.tenant-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.contact-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.contact-text {
  font-size: 28rpx;
  color: #64748b;
  flex: 1;
}

.call-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

/* 区块样式 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

/* 信息卡片 */
.info-card {
  padding: 32rpx;
  border-radius: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
}

.info-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.info-value.highlight {
  color: #2563eb;
  font-size: 32rpx;
  font-weight: bold;
}

.info-value.warning {
  color: #f59e0b;
}

/* 合同行 */
.contract-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contract-info {
  flex: 1;
}

.contract-no {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.contract-date {
  font-size: 24rpx;
  color: #64748b;
}

.arrow-right {
  padding-left: 16rpx;
}

/* 账单列表 */
.bill-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bill-item {
  padding: 24rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bill-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.bill-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
}

.bill-date {
  font-size: 24rpx;
  color: #94a3b8;
}

.bill-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.bill-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.bill-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.bill-status.paid {
  background: rgba(16, 185, 129, 0.15);
  color: #10b981;
}

.bill-status.pending {
  background: rgba(245, 158, 11, 0.15);
  color: #f59e0b;
}

.bill-status.overdue {
  background: rgba(239, 68, 68, 0.15);
  color: #ef4444;
}

.empty-text {
  text-align: center;
  padding: 40rpx;
  color: #94a3b8;
  font-size: 28rpx;
}

/* 操作按钮区 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.action-btn.primary {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
}

.action-btn.warning {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 玻璃卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}
