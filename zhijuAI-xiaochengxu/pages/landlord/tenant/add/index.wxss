.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 24rpx;
  padding-bottom: 40rpx;
}

/* 表单卡片 */
.form-card {
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.form-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 表单组 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.required {
  color: #ef4444;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  line-height: 96rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 28rpx 32rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-hint {
  font-size: 24rpx;
  color: #f59e0b;
  margin-top: 8rpx;
}

/* picker样式 */
.picker-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding: 0 32rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1a1a1a;
}

.picker-box.placeholder text {
  color: #94a3b8;
}

/* 日期行 */
.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.form-col {
  flex: 1;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
