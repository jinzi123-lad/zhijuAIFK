/** index.wxss **/
.container { min-height: 100vh; }
.main-body { padding-top: 180rpx; }

/* Grid 4 */
.grid-4 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
}

.stats-box {
    padding: 16rpx 8rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s;
    border: 2rpx solid transparent;
}

.ring-primary { border-color: #2563eb; background-color: rgba(37,99,235,0.05); }
.ring-success { border-color: #10b981; background-color: rgba(16,185,129,0.05); }
.ring-warning { border-color: #f59e0b; background-color: rgba(245,158,11,0.05); }

.stats-val { font-size: 32rpx; font-weight: bold; }
.stats-lbl { font-size: 22rpx; }

/* Filter */
.filter-row { display: flex; gap: 16rpx; }
.filter-pill {
    padding: 12rpx 32rpx;
    border-radius: 999px;
    font-size: 26rpx;
    transition: all 0.3s;
    white-space: nowrap;
}

.bg-primary { background: #2563eb; }
.text-white { color: #fff; }

/* Req Card */
.req-card { padding: 32rpx; border-radius: 32rpx; }

.icon-sq { width: 80rpx; height: 80rpx; flex-shrink: 0; }
.rounded-xl { border-radius: 24rpx; }

.req-title { font-size: 30rpx; }
.req-sub { font-size: 24rpx; }
.req-desc { font-size: 26rpx; color: #334155; line-height: 1.4; }
.text-ellips-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.tag-row { flex-wrap: wrap; }
.tag {
    padding: 4rpx 16rpx;
    border-radius: 999px;
    font-size: 22rpx;
    font-weight: 500;
}

.bg-destructive-10 { background: rgba(239,68,68,0.1); color: #ef4444; }
.bg-warning-10 { background: rgba(245,158,11,0.1); color: #f59e0b; }
.bg-primary-10 { background: rgba(37,99,235,0.1); color: #2563eb; }
.bg-success-10 { background: rgba(16,185,129,0.1); color: #10b981; }
.bg-muted { background: rgba(148,163,184,0.1); color: #64748b; }

.border-t { border-top: 1rpx solid rgba(255,255,255,0.3); }

/* Common */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
.flex-row { display: flex; }
.items-start { align-items: flex-start; }
.items-center { align-items: center; }
.space-between { justify-content: space-between; }
.centered { display: flex; justify-content: center; align-items: center; }

.text-primary { color: #2563eb; }
.text-success { color: #10b981; }
.text-warning { color: #f59e0b; }
.text-muted { color: #64748b; }
.font-bold { font-weight: 600; }

.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.pb-1 { padding-bottom: 8rpx; }
.mr-3 { margin-right: 24rpx; }
.mr-2 { margin-right: 16rpx; }
.ml-1 { margin-left: 8rpx; }
.ml-2 { margin-left: 16rpx; }
.pt-3 { padding-top: 24rpx; }
.block { display: block; }
.fab-btn {
    position: fixed;
    bottom: 64rpx;
    right: 48rpx;
    width: 112rpx;
    height: 112rpx;
    border-radius: 50%;
    box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.4);
    z-index: 100;
}
