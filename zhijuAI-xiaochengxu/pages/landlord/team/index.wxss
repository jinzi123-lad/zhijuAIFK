.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.main-body {
  padding: 20rpx;
  padding-top: 200rpx;
  padding-bottom: 180rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.stat-num.success { color: #10b981; }
.stat-num.warning { color: #f59e0b; }

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #2563eb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 成员列表 */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 20rpx;
}

.member-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.member-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.member-avatar.pending {
  background: linear-gradient(135deg, #94a3b8, #64748b);
}

.member-info {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.role-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: #e0e7ff;
  color: #4f46e5;
}

.role-manager { background: #dbeafe; color: #2563eb; }
.role-sales { background: #fef3c7; color: #d97706; }
.role-finance { background: #d1fae5; color: #059669; }
.role-maintenance { background: #fee2e2; color: #dc2626; }

.member-phone {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.member-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 22rpx;
  color: #f59e0b;
}

.member-status.active .status-text {
  color: #10b981;
}

.member-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
}

.action-btn.edit {
  background: #e0e7ff;
  color: #4f46e5;
}

.action-btn.remove {
  background: #fee2e2;
  color: #dc2626;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 16rpx 48rpx;
  background: #2563eb;
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
}

/* 浮动按钮 */
.fab-btn {
  position: fixed;
  bottom: 48rpx;
  right: 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.fab-text {
  font-size: 28rpx;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-section {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-item {
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.role-item.active {
  background: #e0e7ff;
  border-color: #2563eb;
}

.role-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.role-icon-box {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
}

.role-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.role-check {
  width: 40rpx;
  height: 40rpx;
  background: #2563eb;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.role-desc {
  font-size: 24rpx;
  color: #666;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
  border: none;
}

.cancel-btn {
  background: #f5f7fa;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #2563eb, #7c3aed);
  color: #fff;
}

/* glass效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}