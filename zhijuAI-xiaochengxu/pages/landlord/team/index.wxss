.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
  padding-bottom: 80px;
}

.member-list { padding: 12px 16px; }

.member-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  gap: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.member-avatar {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 18px;
  font-weight: 600;
  flex-shrink: 0;
}

.member-info { flex: 1; }

.name-row { display: flex; align-items: center; gap: 8px; margin-bottom: 4px; }
.name { font-size: 15px; font-weight: 600; color: #333; }

.role-badge {
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 8px;
}

.role-manager { background: #e6f7ff; color: #1890ff; }
.role-sales { background: #f0f5ff; color: #2f54eb; }
.role-finance { background: #f6ffed; color: #52c41a; }
.role-maintenance { background: #fff7e6; color: #fa8c16; }

.phone { font-size: 12px; color: #999; display: block; }
.pending-tip { font-size: 11px; color: #fa8c16; display: block; margin-top: 4px; }

.member-actions { display: flex; gap: 8px; }

.action-btn {
  font-size: 12px;
  color: #667eea;
  padding: 4px 10px;
  background: #f0f5ff;
  border-radius: 12px;
}

.action-btn.danger { background: #fff1f0; color: #ff4d4f; }

.fab-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 14px 24px;
  border-radius: 28px;
  font-size: 14px;
  font-weight: 600;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 16px 16px 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title { font-size: 16px; font-weight: 600; }
.close-btn { font-size: 20px; color: #999; }

.modal-body { padding: 16px; }

.section { margin-bottom: 20px; }
.section-title { font-size: 14px; font-weight: 600; color: #333; margin-bottom: 12px; display: block; }

.phone-input {
  width: 100%;
  padding: 14px;
  background: #f9fafb;
  border-radius: 10px;
  font-size: 16px;
  box-sizing: border-box;
}

.role-list { display: flex; flex-direction: column; gap: 10px; }

.role-item {
  padding: 14px;
  background: #f9fafb;
  border-radius: 10px;
  border: 2px solid transparent;
}

.role-item.active {
  border-color: #667eea;
  background: #f0f5ff;
}

.role-name { font-size: 14px; font-weight: 600; color: #333; display: block; }
.role-desc { font-size: 12px; color: #999; margin-top: 4px; display: block; }

.modal-footer { padding: 16px; border-top: 1px solid #f0f0f0; }

.submit-btn {
  width: 100%;
  height: 48px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24px;
  font-size: 16px;
  font-weight: 500;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
}

.empty-icon { font-size: 48px; margin-bottom: 12px; }
.empty-text { font-size: 14px; color: #666; margin-bottom: 4px; }
.empty-hint { font-size: 12px; color: #999; }

.loading { text-align: center; padding: 100px; color: #999; }