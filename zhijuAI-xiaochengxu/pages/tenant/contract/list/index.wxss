.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
}

.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14px 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.tab.active {
  color: #667eea;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 3px;
  background: #667eea;
  border-radius: 2px;
}

.contract-list {
  padding: 12px 16px;
}

.contract-card {
  background: #fff;
  border-radius: 12px;
  margin-bottom: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #f5f7fa;
}

.property-name {
  font-size: 15px;
  font-weight: 600;
  color: #333;
}

.status-tag {
  font-size: 11px;
  padding: 3px 8px;
  border-radius: 10px;
}

.status-active { background: #f6ffed; color: #52c41a; }
.status-pending_tenant { background: #fff7e6; color: #fa8c16; }
.status-pending_landlord { background: #e6f7ff; color: #1890ff; }
.status-expired { background: #f5f5f5; color: #999; }
.status-terminated { background: #fff1f0; color: #ff4d4f; }

.card-body {
  padding: 12px 16px;
}

.info-row {
  display: flex;
  margin-bottom: 8px;
}

.info-row:last-child { margin-bottom: 0; }

.info-row .label {
  width: 70px;
  font-size: 13px;
  color: #999;
}

.info-row .value {
  flex: 1;
  font-size: 13px;
  color: #333;
}

.info-row .value.price {
  color: #e74c3c;
  font-weight: 600;
}

.info-row .value.highlight {
  color: #667eea;
}

.card-footer {
  padding: 12px 16px;
  border-top: 1px solid #f5f7fa;
}

.btn {
  text-align: center;
  padding: 10px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
}

.empty-icon { font-size: 48px; margin-bottom: 12px; }
.empty-text { font-size: 14px; color: #999; }

.loading {
  text-align: center;
  padding: 100px;
  color: #999;
}