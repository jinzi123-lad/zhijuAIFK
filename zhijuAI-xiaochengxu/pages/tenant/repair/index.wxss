.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
  padding-bottom: 80px;
}

.repair-list { padding: 12px 16px; }

.repair-card {
  background: #fff;
  border-radius: 12px;
  margin-bottom: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 16px;
  gap: 12px;
}

.category-icon {
  width: 44px;
  height: 44px;
  background: #f0f5ff;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22px;
}

.repair-info { flex: 1; }
.title { display: block; font-size: 15px; font-weight: 600; color: #333; }
.meta { display: block; font-size: 12px; color: #999; margin-top: 4px; }

.status-tag {
  font-size: 11px;
  padding: 4px 8px;
  border-radius: 10px;
}

.status-pending { background: #fff7e6; color: #fa8c16; }
.status-assigned { background: #e6f7ff; color: #1890ff; }
.status-in_progress { background: #e6f7ff; color: #1890ff; }
.status-completed { background: #f6ffed; color: #52c41a; }
.status-confirmed { background: #f5f5f5; color: #999; }

.card-footer { padding: 12px 16px; border-top: 1px solid #f5f7fa; }

.confirm-btn {
  text-align: center;
  padding: 8px;
  background: #f6ffed;
  color: #52c41a;
  border-radius: 16px;
  font-size: 13px;
  font-weight: 500;
}

.fab-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 14px 24px;
  border-radius: 28px;
  font-size: 14px;
  font-weight: 600;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 16px 16px 0 0;
  max-height: 85vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 10;
}

.modal-title { font-size: 16px; font-weight: 600; }
.close-btn { font-size: 20px; color: #999; }

.modal-body { padding: 16px; }

.section { margin-bottom: 20px; }
.section-title { font-size: 14px; font-weight: 600; color: #333; margin-bottom: 12px; display: block; }

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 8px;
  background: #f9fafb;
  border-radius: 10px;
  border: 2px solid transparent;
}

.category-item.active {
  border-color: #667eea;
  background: #f0f5ff;
}

.category-item .category-icon { font-size: 24px; margin-bottom: 4px; }
.category-item .category-name { font-size: 11px; color: #666; }

.input-box {
  width: 100%;
  padding: 12px;
  background: #f9fafb;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.textarea-box {
  width: 100%;
  height: 80px;
  padding: 12px;
  background: #f9fafb;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.remove-btn {
  position: absolute;
  top: -6px;
  right: -6px;
  width: 20px;
  height: 20px;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image {
  aspect-ratio: 1;
  background: #f9fafb;
  border: 1px dashed #ddd;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-icon { font-size: 24px; }
.add-text { font-size: 11px; color: #999; margin-top: 4px; }

.modal-footer {
  padding: 16px;
  border-top: 1px solid #f0f0f0;
  position: sticky;
  bottom: 0;
  background: #fff;
}

.submit-btn {
  width: 100%;
  height: 48px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24px;
  font-size: 16px;
  font-weight: 500;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
}

.empty-icon { font-size: 48px; margin-bottom: 12px; }
.empty-text { font-size: 14px; color: #999; }

.loading { text-align: center; padding: 100px; color: #999; }