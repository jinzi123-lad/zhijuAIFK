.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
}

.appointment-list {
  padding: 12px 16px;
}

.appointment-card {
  background: #fff;
  border-radius: 12px;
  margin-bottom: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.card-content {
  display: flex;
  padding: 12px;
  gap: 12px;
}

.property-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  flex-shrink: 0;
}

.info {
  flex: 1;
  min-width: 0;
}

.title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meta {
  margin-bottom: 6px;
}

.date {
  font-size: 12px;
  color: #667eea;
}

.landlord {
  font-size: 12px;
  color: #999;
}

.status-tag {
  font-size: 11px;
  padding: 4px 8px;
  border-radius: 10px;
  height: fit-content;
}

.status-pending { background: #fff7e6; color: #fa8c16; }
.status-confirmed { background: #e6f7ff; color: #1890ff; }
.status-rescheduled { background: #fff2e8; color: #fa541c; }
.status-cancelled { background: #f5f5f5; color: #999; }
.status-completed { background: #f6ffed; color: #52c41a; }

.reschedule-notice {
  background: #fffbe6;
  padding: 12px;
  border-top: 1px solid #fff1b8;
}

.notice-text {
  font-size: 13px;
  color: #d48806;
  margin-bottom: 10px;
  display: block;
}

.notice-actions {
  display: flex;
  gap: 10px;
}

.notice-btn {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  border-radius: 16px;
  font-size: 13px;
  font-weight: 500;
}

.notice-btn.refuse { background: #f5f5f5; color: #999; }
.notice-btn.agree { background: #667eea; color: #fff; }

.card-actions {
  border-top: 1px solid #f5f7fa;
  padding: 10px 12px;
}

.action-btn {
  text-align: center;
  font-size: 13px;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
}

.empty-icon { font-size: 48px; margin-bottom: 12px; }
.empty-text { font-size: 14px; color: #999; margin-bottom: 20px; }
.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 10px 24px;
  border-radius: 20px;
  font-size: 14px;
}

.loading {
  text-align: center;
  padding: 100px;
  color: #999;
}
