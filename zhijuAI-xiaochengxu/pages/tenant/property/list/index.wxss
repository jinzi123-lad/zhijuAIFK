.page-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-top: 88px;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: #fff;
  gap: 12px;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 20px;
  padding: 8px 16px;
  gap: 8px;
}

.search-input input {
  flex: 1;
  font-size: 14px;
}

.filter-btn {
  color: #667eea;
  font-size: 14px;
  font-weight: 500;
}

.filter-tags {
  display: flex;
  padding: 12px 16px;
  gap: 8px;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tag {
  padding: 6px 12px;
  background: #f5f7fa;
  border-radius: 16px;
  font-size: 12px;
  color: #666;
}

.tag.active {
  background: #667eea;
  color: #fff;
}

.property-list {
  padding: 12px 16px;
}

.property-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.property-image {
  width: 100%;
  height: 180px;
}

.property-info {
  padding: 12px 16px;
}

.property-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
}

.property-meta {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.property-price {
  font-size: 20px;
  font-weight: 700;
  color: #e74c3c;
}

.property-price .unit {
  font-size: 12px;
  font-weight: 400;
  color: #999;
}

.loading, .empty {
  text-align: center;
  padding: 40px;
  color: #999;
  font-size: 14px;
}
