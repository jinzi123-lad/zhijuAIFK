/** index.wxss **/
.container { min-height: 100vh; }
.main-body { padding-top: 180rpx; }

/* Grid 4 */
.grid-4 { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16rpx; }

.icon-circle { width: 96rpx; height: 96rpx; border-radius: 50%; display: flex; justify-content: center; align-items: center; margin-bottom: 8rpx; }
.bg-yellow-light { background: rgba(255, 217, 61, 0.15); }
.bg-blue-light { background: rgba(168, 218, 220, 0.15); }
.bg-teal-light { background: rgba(149, 225, 211, 0.15); }
.bg-pink-light { background: rgba(255, 107, 157, 0.15); }

/* Property Card */
.h-40 { height: 320rpx; }
.bg-muted-20 { background: #e2e8f0; }
.bg-black-50 { background: rgba(0,0,0,0.6); }
.text-ellips-1 { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.tag { padding: 4rpx 12rpx; margin-right: 8rpx; }
.bg-primary-10 { background: rgba(37, 99, 235, 0.1); }
.text-primary { color: #2563eb; }

/* Common */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}
.flex-row { display: flex; align-items: center; }
.centered { display: flex; justify-content: center; align-items: center; }
.flex-col { flex-direction: column; }
.text-muted { color: #64748b; }
.font-bold { font-weight: 600; }
.text-xs { font-size: 22rpx; }
.text-sm { font-size: 26rpx; }
.text-base { font-size: 30rpx; }
.text-lg { font-size: 34rpx; }
.ml-2 { margin-left: 16rpx; }
.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-8 { padding: 64rpx; }
.rounded-full { border-radius: 999px; }
.rounded-2xl { border-radius: 32rpx; }
.shadow-sm { box-shadow: 0 1rpx 2rpx rgba(0,0,0,0.05); }
.shadow-md { box-shadow: 0 4rpx 6rpx -1rpx rgba(0,0,0,0.1); }
.overflow-hidden { overflow: hidden; }
.relative { position: relative; }
.absolute { position: absolute; }
.bottom-2 { bottom: 16rpx; }
.left-2 { left: 16rpx; }
.w-full { width: 100%; }
.mt-2 { margin-top: 16rpx; }
