<view class="container">
  <!-- Mesh Gradient Background -->
  <view class="mesh-gradient"></view>

  <view class="content-wrapper">
    <!-- Header / Logo -->
    <view class="header-section icon-fade-in">
        <view class="logo-circle bg-gradient-blue-purple icon-float">
            <!-- Simple House Icon (Using Text for now or replace with SVG image if available) -->
            <text class="logo-icon">🏠</text> 
        </view>
        <view class="brand-title">智居AI</view>
        <view class="brand-subtitle">定义未来居住新方式</view>
    </view>

    <!-- Role Buttons -->
    <view class="role-cards">
        <!-- Tenant Button -->
        <view class="role-card glass-card icon-fade-in stagger-1" bindtap="selectRole" data-role="tenant">
            <view class="card-inner">
                <view class="card-left">
                    <view class="icon-circle bg-gradient-green icon-pulse">
                        <text class="role-icon">👤</text>
                    </view>
                    <view class="text-group">
                        <text class="role-title">我是租客</text>
                        <text class="role-desc">寻找理想的居住空间</text>
                    </view>
                </view>
                <view class="arrow-icon">></view>
            </view>
        </view>

        <!-- Landlord Button -->
        <view class="role-card glass-card icon-fade-in stagger-2" bindtap="selectRole" data-role="landlord">
            <view class="card-inner">
                <view class="card-left">
                    <view class="icon-circle bg-gradient-blue-purple icon-pulse">
                        <text class="role-icon">🏠</text>
                    </view>
                    <view class="text-group">
                        <text class="role-title">我是房东</text>
                        <text class="role-desc">智能管理我的房产</text>
                    </view>
                </view>
                <view class="arrow-icon">></view>
            </view>
        </view>
    </view>

    <!-- Footer -->
    <view class="footer-text icon-fade-in stagger-3">选择您的身份以继续使用</view>
  </view>
</view>
