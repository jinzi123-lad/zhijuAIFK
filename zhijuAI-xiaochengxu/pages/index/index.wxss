/** index.wxss **/
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
}

.content-wrapper {
  width: 100%;
  max-width: 600rpx;
}

/* Header */
.header-section {
  text-align: center;
  margin-bottom: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center; /* Center flex children */
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 48rpx;
  box-shadow: 0 20rpx 50rpx rgba(59, 130, 246, 0.3);
}

.logo-icon {
  font-size: 80rpx;
  color: white;
}

.brand-title {
  font-size: 72rpx; /* text-4xl ~ 36px * 2 */
  font-weight: bold;
  margin-bottom: 24rpx;
  background: linear-gradient(to right, #2563eb, #9333ea);
  -webkit-background-clip: text;
  color: transparent; /* Use fallback if needed, but miniprogram supports transparent for background-clip often */
  color: #2563eb; /* Fallback */
}

.brand-subtitle {
  font-size: 36rpx; /* text-lg */
  color: #4b5563;
}

/* Role Cards */
.role-cards {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.role-card {
  padding: 48rpx;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.role-card:active {
  transform: scale(0.98);
}

.card-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.icon-circle {
  width: 112rpx; /* w-14 */
  height: 112rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.role-icon {
  font-size: 56rpx;
  color: white;
}

.text-group {
  display: flex;
  flex-direction: column;
}

.role-title {
  font-size: 40rpx; /* text-xl */
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 28rpx; /* text-sm */
  color: #6b7280;
}

.arrow-icon {
  color: #9ca3af;
  font-size: 40rpx;
}

/* Footer */
.footer-text {
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 64rpx;
}
