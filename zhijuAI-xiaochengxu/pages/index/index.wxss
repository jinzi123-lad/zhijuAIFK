/* pages/index/index.wxss */
page {
  background-color: #f8fafc;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60rpx;
  position: relative;
  overflow: hidden;
}

/* Background Decoration (Design Point) */
.bg-blob {
  position: absolute;
  filter: blur(80rpx);
  opacity: 0.6;
  z-index: -1;
  animation: float 10s ease-in-out infinite;
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: #cffafe; /* Cyan-100 */
  top: -100rpx;
  right: -100rpx;
}

.blob-2 {
  width: 600rpx;
  height: 600rpx;
  background: #e0e7ff; /* Indigo-100 */
  bottom: -100rpx;
  left: -100rpx;
  animation-delay: -5s;
}

@keyframes float {
  0% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(20rpx, 30rpx) rotate(5deg); }
  100% { transform: translate(0, 0) rotate(0deg); }
}

.header {
  margin-bottom: 100rpx;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 64rpx;
  font-weight: 800;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.role-selection {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  position: relative;
  z-index: 10;
}

.role-card {
  position: relative;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(148, 163, 184, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.6);
}

.role-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  z-index: -1;
}

.role-card:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 20rpx -5rpx rgba(148, 163, 184, 0.1);
}

/* Tenant Card Styles */
.role-card.tenant .icon-box {
  background: linear-gradient(135deg, #0ea5e9, #22d3ee);
  box-shadow: 0 10rpx 20rpx -5rpx rgba(14, 165, 233, 0.3);
}

.role-card.landlord .icon-box {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  box-shadow: 0 10rpx 20rpx -5rpx rgba(99, 102, 241, 0.3);
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: white;
}

.card-text {
  flex: 1;
  margin-left: 30rpx;
}

.role-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 24rpx;
  color: #64748b;
}

.arrow {
  width: 60rpx;
  height: 60rpx;
  background: #f1f5f9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
  font-size: 24rpx;
}

