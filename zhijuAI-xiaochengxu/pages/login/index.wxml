<view class="container">
  <view class="mesh-bg">
    <view class="mesh-blob mesh-blob-1"></view>
    <view class="mesh-blob mesh-blob-2"></view>
  </view>
  
  <view class="login-box">
    <!-- Centered Header -->
    <view class="login-header">
      <view class="role-badge">{{role === 'TENANT' ? '租客端' : '房东端'}}</view>
      <text class="login-title">欢迎使用智居AI</text>
      <text class="login-subtitle">请完成登录以继续</text>
    </view>

    <!-- Centered Actions -->
    <view class="login-actions">
      <button 
        class="action-btn wechat-btn" 
        bindtap="handleWechatLogin" 
        loading="{{isLoading}}"
        hover-class="btn-hover"
      >
        <image class="wechat-icon" src="/images/wechat-icon.png" wx:if="{{false}}"></image> <!-- Placeholder -->
        <text>微信一键登录</text>
      </button>
      
      <button 
        class="action-btn phone-btn" 
        bindtap="handlePhoneLogin"
        hover-class="btn-hover"
      >
        手机号码登录
      </button>
    </view>
  </view>

  <view class="footer-agreement">
    <text>登录即代表同意 <text class="link">用户协议</text> 与 <text class="link">隐私政策</text></text>
  </view>
</view>
