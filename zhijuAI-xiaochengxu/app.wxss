/** app.wxss **/

/* 1. CSS Variables (Adapted from globals.css) */
page {
  /* OKLCH to standard HSL/RGB approximation for safety, or keep variables */
  --background: #f8fafc; /* light slate 50 */
  --foreground: #0f172a; /* slate 900 */
  
  --primary: #2563eb; /* blue 600 */
  --primary-foreground: #ffffff;
  
  --secondary: #f1f5f9; /* slate 100 */
  --secondary-foreground: #0f172a;
  
  --muted: #f8fafc;
  --muted-foreground: #64748b; /* slate 500 */
  
  --accent: #8b5cf6; /* violet 500 */
  --accent-foreground: #ffffff;
  
  --destructive: #ef4444; /* red 500 */
  --destructive-foreground: #ffffff;
  
  --success: #10b981; /* emerald 500 */
  --warning: #f59e0b; /* amber 500 */
  
  --border: #e2e8f0; /* slate 200 */
  --input: #e2e8f0;
  --ring: #2563eb;
  
  --radius: 32rpx; /* 16px -> 32rpx */
}

/* 2. Global Resets & Utilities */
view, text, scroll-view, button {
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

/* 3. Glassmorphism */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.glass-light {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

/* 4. Mesh Gradient Background */
.mesh-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  overflow: hidden;
  background: #f8fafc; /* Fallback */
}

/* Orb 1: Blue-ish */
.mesh-gradient::before {
  content: '';
  position: absolute;
  top: -20%;
  left: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(circle, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0) 70%);
  border-radius: 50%;
  filter: blur(60px);
  animation: orbFloat1 15s infinite alternate ease-in-out;
}

/* Orb 2: Purple-ish */
.mesh-gradient::after {
  content: '';
  position: absolute;
  bottom: -20%;
  right: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, rgba(139, 92, 246, 0) 70%);
  border-radius: 50%;
  filter: blur(60px);
  animation: orbFloat2 18s infinite alternate-reverse ease-in-out;
}

@keyframes orbFloat1 {
  0% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30%, 20%) scale(1.1); }
  66% { transform: translate(10%, 40%) scale(0.9); }
  100% { transform: translate(40%, 10%) scale(1); }
}

@keyframes orbFloat2 {
  0% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(-30%, -20%) scale(1.1); }
  66% { transform: translate(-10%, -40%) scale(0.95); }
  100% { transform: translate(-40%, -10%) scale(1); }
}

/* 5. Animations from globals.css */
/* Icon Hover Scale -> Active Scale for Touch */
.icon-hover-scale {
  transition: transform 0.3s;
}
.icon-hover-scale:active {
  transform: scale(1.15);
}

/* Pulse */
.icon-pulse {
  animation: iconPulse 2s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.05); }
}

/* Float */
.icon-float {
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

/* Fade In */
.icon-fade-in {
  animation: iconFadeIn 0.6s ease-out backwards;
}

@keyframes iconFadeIn {
  0% { opacity: 0; transform: translateY(10px) scale(0.9); }
  100% { opacity: 1; transform: translateY(0) scale(1); }
}

/* Stagger Delays */
.stagger-1 { animation-delay: 0.05s; }
.stagger-2 { animation-delay: 0.1s; }
.stagger-3 { animation-delay: 0.15s; }

/* 6. Utility Helper Classes (Tailwind-ish) */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.w-full { width: 100%; }
.h-full { height: 100%; }
.text-center { text-align: center; }
.relative { position: relative; }
.absolute { position: absolute; }
.rounded-full { border-radius: 9999px; }
.rounded-2xl { border-radius: 32rpx; }
.shadow-lg { box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1); }
.text-white { color: #ffffff; }
.text-primary { color: var(--primary); }
.text-muted { color: var(--muted-foreground); }
.font-bold { font-weight: 700; }
.p-6 { padding: 48rpx; }
.mb-6 { margin-bottom: 48rpx; }
.gap-4 { gap: 32rpx; }

/* Gradients */
.bg-gradient-blue-purple {
    background: linear-gradient(135deg, #3b82f6, #9333ea);
}
.bg-gradient-green {
    background: linear-gradient(135deg, #4ade80, #10b981);
}
