/* components/landlord-tabbar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  padding-bottom: env(safe-area-inset-bottom);
}

.glass-light {
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
}

.tab-bar-inner {
  display: flex;
  justify-content: space-around;
  align-items: flex-end; /* Align bottom to handle center button pop-up */
  height: 110rpx; /* Standard height */
  padding: 12rpx 32rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  flex: 1;
}

.center-item {
  position: relative;
  top: -40rpx; /* Pop out effect */
}

.tab-icon {
  font-size: 48rpx;
}

.tab-text {
  font-size: 20rpx;
  font-weight: 500;
}

.add-btn {
  width: 112rpx; /* w-14 */
  height: 112rpx; /* h-14 */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.4); 
}

.bg-gradient-brand {
  background: linear-gradient(to right, #2563eb, #8b5cf6); /* primary to accent */
}

.plus-icon {
  font-size: 56rpx;
  color: white;
}

.active {
  color: #2563eb;
}

.text-muted {
  color: #64748b;
}

.text-primary {
  color: #2563eb;
}

.relative { position: relative; }

.badge {
  position: absolute;
  top: -4rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ef4444;
  border-radius: 50%;
}

/* Animations reused from global */
.icon-hover-scale { transition: transform 0.3s; }
.icon-float { animation: iconFloat 3s ease-in-out infinite; }
.icon-pulse { animation: iconPulse 2s ease-in-out infinite; }
.icon-hover-rotate { transition: transform 0.4s; }
.icon-hover-bounce:active { transform: scale(0.95); }

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

@keyframes iconPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.05); }
}
